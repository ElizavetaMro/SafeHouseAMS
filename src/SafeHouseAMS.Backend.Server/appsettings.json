{
  "oidc":{
    "Authority":"https://idp-ams.dev-maca.ca/auth/realms/ams-dev"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },

  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args":
        {
          "path": "/logs/ams.log",
          "rollingInterval":"Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "LettuceEncrypt": {
    "AcceptTermsOfService": true,
    "AllowedChallengeTypes": "Http01",
    "DomainNames": [ "api-ams.dev-maca.ca" ],
    "EmailAddress": "zetroot@gmail.com"
  },
  "CertPersist" :{
    "Path":"/certs/",
    "Password":"CHANGEME"
  }
}
