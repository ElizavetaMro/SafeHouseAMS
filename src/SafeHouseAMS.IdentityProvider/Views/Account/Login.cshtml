@model SafeHouseAMS.IdentityProvider.Controllers.Account.LoginViewModel

<div class="login-page">
    <div class="lead">
        <h1>Вход</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Данные аккаунта</h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="form-control" placeholder="Имя пользователя" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            Запомнить меня
                                        </label>
                                    </div>
                                </div>
                            }

                            <button class="btn btn-primary" name="button" value="login">Вход</button>
                            <button class="btn btn-secondary" name="button" value="cancel">Отмена</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
